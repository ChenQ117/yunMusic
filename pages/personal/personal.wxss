.personalContainer{
  height: 100%;
  width: 100%;
}
.personalContainer .user-section{
    height: 520rpx;
    position: relative;
    padding: 100rpx 30rpx 0;
}
.user-section .bg{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0.7;
    filter: blur(1px);
}
.user-info-box{
    height: 180rpx;
    display: flex;
    align-items: center;
    position: relative;
    z-index: 1;
}
.user-info-box .portrait{
    width: 130rpx;
    height: 130rpx;
    border: 5rpx solid #fff;
    border-radius: 50%;
}
.user-info-box .username{
    font-size: 24;
    color: #303133;
    margin-left: 20rpx;
}

/*会员界面*/
.vip-card-box{
    position: relative;
    /*background: #666666;*/
    background: rgba(0,0,0,.7);
    display: flex;
    flex-direction: column;
    height: 240rpx;
    color: #f7d680;
    padding: 20rpx 24rpx;
    border-radius: 20rpx;
}

.vip-card-box .card-bg{
    position: absolute;
    right: 0;
    top: 20rpx;
    height: 260rpx;
    width: 380rpx;
}
.vip-card-box .b-btn{
    position: absolute;
    right: 20rpx;
    top: 16rpx;
    font-size: 22rpx;
    width: 132rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    color: #36343c;
    background: #f9e6af;
    border-radius: 25rpx;
}
.vip-card-box .tit{
    font-size: 22rpx;
    color: #f7d680;
    margin-bottom: 28rpx;
}
.vip-card-box .iconfont{
    color: #f6e5a3;
    margin-right: 16rpx;
}
.vip-card-box .e-m{
    font-size: 34rpx;
    margin-top: 10rpx;
}
.vip-card-box .e-b{
    font-size: 24rpx;
    color: #d8cba9;
    margin-top: 10rpx;
}


.cover-container{
    margin-top: -150rpx;
    position: relative;
    background: #f5f5f5;
    padding: 0 30rpx;
    padding-bottom: 20rpx;
}
.cover-container .arc{
    position: absolute;
    left: 0;
    top: -34rpx;
    width: 100%;
    height: 36rpx;

}


/*个人导航栏*/
.nav-section{
    background: #fff;
    display: flex;
    padding: 20rpx 0;
    border-radius: 15rpx;
}
.nav-section .nav-item{
    width: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}
.nav-section .nav-item .iconfont{
    font-size: 50rpx;
    color: #d43c33;
    line-height: 70rpx;
}
.nav-section .nav-item text:last-child{
    font-size: 22rpx;
}

/*最近播放*/
.cover-container .personalContent{
    background: #fff;
    margin-top: 20rpx;
    border-radius: 15rpx;
}

.personalContent .recentPlayContainer{
    display: flex;
    padding: 20rpx 15rpx;
}

.recentPlayContainer .title{
    padding-left: 20rpx;
    font-style: 26rpx;
    color: #333;
    line-height: 80rpx;
}

.cardList{
    margin-top: 20rpx;
}

.cardList .card-item{
    border-top: 1rpx solid #eee;
    height: 80rpx;
    line-height: 80rpx;
    padding: 10rpx;
    font-size: 26rpx;
    color: #333;
}
.cardList .card-item .more{
    float: right;
}

/* 最近播放记录*/
.recentScroll{
    display: flex;
    height: 200rpx;
}
.recentItem{
    margin-left: 10rpx;
    margin-right: 10rpx;
}
.recentItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}