/* pages/video/video.wxss */
.videoContainer .header{
    display: flex;
    padding: 10rpx;
}
.videoContainer .header image{
    width: 60rpx;
    height: 60rpx;
}
.videoContainer .header .search{
    border: 1rpx solid #eee;
    /*flex-grow: 可拉伸 flex-shrink： 可压缩 flex-basis: 当前元素的宽度*/
    /*flex默认值: flex-grow: 0, flex-shrink: 1, flex-basis: auto*/
    /*flex:1  flex-grow: 1, flex-shrink: 1, flex-basis: 0%*/
    /*flex:auto  flex-grow: 1, flex-shrink: 1, flex-basis: auto*/
    /*flex: 1会导致父元素宽度自动为100%*/
    flex: 1;
    margin: 0 20rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
}

/*导航区域*/
.navScroll{
    display: flex;
    height: 60rpx;
    white-space: nowrap;
}

.navItem{
    padding: 0 30rpx;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.navContent{
    height: 60rpx;
    box-sizing: border-box;
}
.navItem .active{
    border-bottom: 1rpx solid #d43c33;
}

/*视频列表区域*/
.videoScroll{
    margin-top: 10rpx;
/*    calc: 可以动态计算css的宽高， 运算符左右两侧必须加空格，否则计算会失效 */
/*    视口单位： vh vw  1vh = 1%的视口高度  1vw = 1%的视口宽度!*/
    height: calc(100vh - 152rpx);
/*    用来测试页面的上拉触底*/
/*    height: calc(100vh - 100rpx);*/

}
.videoItem{
    padding: 0 3%;
}
.common{
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
}
.content{
    height: 80rpx;
    line-height: 80rpx;
    max-width: 500rpx;
    font-size: 26rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/*点赞评论框*/
.footer{
    padding: 20rpx 0;
    height: 60rpx;
    width: 100%;
    line-height: 60rpx;
    border-top: 1rpx solid #eee;
}
.avatarUrl{
    border-radius: 50%;
    height: 60rpx;
    width: 60rpx;
    vertical-align: middle;
}
.nickname{
    height: 60rpx;
    line-height: 60rpx;
    vertical-align: middle;
    font-size: 26rpx;
    margin-left: 20rpx;
}


.comments_praised{
    float: right;
    padding-right: 20rpx;
}
.item{
    position: relative;
    margin-left: 40rpx;
    margin-right: 40rpx;
}
.item .count{
    position: absolute;
    top: -20rpx;
    font-size: 20rpx;
}
.bt {
    display: inline;
    padding: 0;
    background-color: transparent;
    border-color: transparent;
}
.btn:after {
    border: none;
}

