/* pages/search/search.wxss */
.searchContainer {
    padding: 0 20rpx;
}
.header{
    position: relative;
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 0;
}
.clear{
    position: absolute;
    z-index: 10;
    right: 0;
    top: 0;
    margin-right: 20rpx;
    font-size: 36rpx;
}
.cancel{
    width: 100rpx;
    text-align: center;
    
}
.searchInput{
    position: relative;
    flex: 1;
    background: rgba(237, 237, 237, 0.3);
    border-radius: 30rpx;
}

.searchIcon{
    position: absolute;
    left: 15rpx;
}
.searchInput input{
    margin-left: 50rpx;
    height: 60rpx;
}
.placeholder{
    /*color: red;*/
    font-size: 28rpx;
}



/*热搜榜*/
.hotContainer{
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee;
}

.hotList{
    display: flex;
    flex-wrap: wrap;
}
.hotItem{
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}
.hotItem .order{
    margin: 0 10rpx;
}
.hotItem .iconImg{
    width: 35rpx;
    height: 20rpx;
    margin-left: 10rpx;
}


/*搜索模糊匹配区域*/
.searchContent{
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    color: #d43c33;
    border-bottom: 1rpx solid #d43c33;
}

.searchItem{
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}
.searchItem .content{
    margin-left: 20rpx;
    font-size: 26rpx;
    height: 80rpx;
    line-height: 80rpx;
    flex: 1;
    border-bottom: 1rpx solid #eee;
    margin-right: 10rpx;

    /*多出部分隐藏*/
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}


/*搜索历史记录区域*/
.history{
    position: relative;
    display: flex;
    flex-wrap: wrap;
}
.history .title{
    font-size: 28rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin: 0 20rpx;
}
.history .historyItem{
    background: #ededed;
    font-size: 26rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 30rpx;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    padding: 0 30rpx;
}
.history .delete{
    position: absolute;
    right: 15rpx;
    bottom: 10rpx;
    font-size: 36rpx;
}